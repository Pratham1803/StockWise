<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginModule.ManageOtp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="292dp"
            android:layout_height="254dp"
            app:srcCompat="@drawable/otpback" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNumShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lexend_"
                android:text="Hi, 9510125655"
                android:layout_marginBottom="10sp"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imgEditNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="7sp"
                app:srcCompat="@drawable/editvector" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend_"
            android:textAlignment="center"
            android:text="We Have Sent You An OTP,\nCheck Your Message Box"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/progrssBarOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/edOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:ems="10"
            android:hint="Enter Code"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="184dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/process3" />

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_signup"
            android:fontFamily="@font/lexend_bold"
            android:text="Verify"
            android:textColor="#FFFFFF" />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>